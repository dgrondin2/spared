<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, 'email', :class => 'login_label content' %><br />
  <%= f.email_field :email, :class => 'text_field login_textfield', :placeholder => "youremail@example.com" %></div>

  <div><%= f.label :password, 'password', :class => 'login_label content' %><br />
  <%= f.password_field :password, :class => 'text_field login_textfield' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <%= render "devise/shared/links" %>

  <div><%= f.submit "LOGIN", :class => 'donor_sign_in spared_button' %></div>
<% end %>