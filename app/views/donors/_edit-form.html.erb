<%= form_for @donor, url: donor_update_path do |f| %>
    <div class="field">
        <%= f.label :first_name, "first name" %>
        <%= f.text_field :first_name, value: @donor.first_name %>
    </div>
    <div class="field">
        <%= f.label :last_name, "last name" %>
        <%= f.text_field :last_name, value: @donor.last_name %>
    </div>

    <%= f.fields_for :user do |u| %>
        <div class="field">
            <%= u.label :email, "email" %>
            <%= u.text_field :email, value: @user.email %>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :street_address, "street address", class: 'address-label' %>
        <%= f.text_field :street_address, value: @donor.street_address %>
    </div>
    <div class="field">
        <%= f.label :city, "city" %>
        <%= f.text_field :city, value: @donor.city %>
    </div>
    <div class="field">
        <%= f.label :state, "state" %>
        <%= f.text_field :state, value: @donor.state %>
    </div>
    <div class="field">
        <%= f.label :zip, "zip" %>
        <%= f.text_field :zip, value: @donor.zip %>
    </div>
    <div class="field">
        <%= f.check_box :limited_address, checked: true %>
        <%= f.label :limited_address, "Only display my city and zip code", class: "checkbox-label" %>
    </div>

    <div class="field">
        <%= f.label :avatar, 'profile photo', class: 'avatar-label' %>
        <%= f.file_field :avatar %>
    </div>

    <div class="field">
        <%= f.label :bio, "short bio", class: 'bio-label' %>
        <%= f.text_area :bio %>
    </div>

    <%= f.submit "Save", type: 'submit' %>
<% end %>
