<div class="dash-content">

    <h2 class="teal-heading-banner">ITEM-OFFERS</h2>

    <div class="dash_list_heading">
        <span class="bold float_left heading-text">UNMATCHED ITEM-OFFER POSTS</span>
        <span class="float_right ">Showing 1-3 of <%= @item_offers.count %></span>
    </div>

    <ul class="my-item-offers">
        <% if @item_offers.any? %>
            <% @item_offers.each do |item| %>
                <li class="<%= cycle('odd','even') %>_item_offer">
                    <div class="item_offer_image_container float_left">
                        <% if item.image_file_name.present? %>
                            <%= image_tag item.image.url(:thumb) %>
                        <% end %>
                    </div>

                    <div class="item_offer_info_container float_left">
                        <p class="bold"><%= item.name %></p>

                        <p><%= item.description %></p>
                    </div>

                    <div class="item_offer_link_container float_left">
                      <%= link_to 'View details', item, :rel => 'facebox' %>
                    </div>
                </li>
            <% end %>
        <% else %>

        <% end %>
    </ul>

    <div class="dash_list_heading">
        <span class="bold float_left heading-text">ITEM OFFER HISTORY</span>
        <span class="float_right ">Showing 1 of 1</span>
    </div>

</div>