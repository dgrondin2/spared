<!DOCTYPE html>
<html>
<head>
    <title>Spared</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
</head>

<body class='org'>
    <div class="page-frame">
        <%= render :partial => "shared/header" %>
        <%= render :partial => "shared/org-dash-nav" %>

        <div class="whitespace clear"></div>

        <%= yield %>

        <% if current_user %>
            <%= render :partial => 'shared/org-mydash' %>
        <% else %>
            <%= render :partial => "sessions/org-login-form" %>
        <% end %>

        <div class="whitespace clear"></div>

        <%= render :partial => "shared/footer" %>
    </div>
</body>
</html>
