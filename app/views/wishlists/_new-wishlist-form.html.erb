<div class="content-box">

  <%= form_for(@wishlist) do |f| %>
      <% if @wishlist.errors.any? %>
          <div id="error_explanation">
              <h2>
                  <%= pluralize(@wishlist.errors.count, "error") %> prohibited this item from being saved:
              </h2>

              <ul>
                  <% @wishlist.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
              </ul>
          </div>
      <% end %>

      <div class="field">
          <%= f.label :name, 'Title:' %>
          <%= f.text_field :name, :class => 'item-title' %>
      </div>

      <div class="field">
          <%= f.label :description, 'Description:' %>
          <%= f.text_area :description, :rows => '7', :class => 'item-description' %>
      </div>

      <div class="field">
          <%= f.label :image, 'Add a photo:' %>
          <%= f.file_field :image, :class => 'item-img' %>
      </div>

      <%= f.submit 'Submit' %>
  <% end %>
</div>